%h1 Welcome to Tweedis
%a{ :href => '/login' } Log in
#signup
  %h2 Sign up
  %form{ :action => '/signup', :method => 'post' }
    %label{ :for => 'username' } Username
    %input{ :name => 'username', :type => 'text' }
    %br
    %label{ :for => 'password' } Password
    %input{ :name => 'password', :type => 'password' }
    %br
    %button Sign up